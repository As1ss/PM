<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvPiloto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="Piloto: "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tvPosicion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:hint="Posicion: "
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/tvPiloto"
        app:layout_constraintStart_toStartOf="@id/tvPiloto"
        app:layout_constraintEnd_toEndOf="@id/tvPiloto"/>
</androidx.constraintlayout.widget.ConstraintLayout>